# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /goods                                  OperateGoods.index
GET     /goods/new                              OperateGoods.add
POST    /goods                                  OperateGoods.create
GET     /goods/{id}/edit                        OperateGoods.edit
GET     /goods/{id}/view                        OperateGoods.detail
GET     /goods/{id}/preview                     OperateGoods.preview
PUT     /goods/{id}                             OperateGoods.update
POST    /updatestatus                           OperateGoods.updateStatus
DELETE  /goods/{id}                             OperateGoods.delete
POST    /goods/images                           UploadFiles.uploadJson
POST    /goods/filemanager                      UploadFiles.fileManagerJson

GET     /category/sub/{id}                      Categories.showSubs

GET     /shops                                  Shops.index
GET     /shops/new                              Shops.add
POST    /shops                                  Shops.create
GET     /shops/{id}/edit                        Shops.edit
POST    /shops/{id}                             Shops.update
DELETE  /shops/{id}                             Shops.delete
GET     /shops/area                             Shops.showAreas

GET     /suppliers                              Suppliers.index
GET     /suppliers/new                          Suppliers.add
POST    /suppliers                              Suppliers.create
GET     /suppliers/{id}/edit                    Suppliers.edit
PUT     /suppliers/{id}/update                  Suppliers.update
DELETE  /suppliers/{id}/delete                  Suppliers.delete

GET     /resalers                               Resalers.index
GET     /resalers/{id}/view                     Resalers.detail
POST    /resalers/update                        Resalers.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /o/{path1}/{path2}/{path3}/{path4}      Files.getImage

*  	/					module:cas

# Catch all
*       /{controller}/{action}                  {controller}.{action}
