# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /goods                                  Goods.index
POST    /goods                                  Goods.index
GET     /goods/new                              Goods.add
POST    /goods                                  Goods.create
GET     /goods/{id}/edit                        Goods.edit
GET     /goods/{id}/view                        Goods.detail
POST    /goods/{id}                             Goods.update
POST    /updatestatus                          Goods.updateStatus
DELETE    /goods/delete                      Goods.delete

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
