# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /orders                                 SupplierOrders.index
GET     /coupons                                SupplierOrders.coupons
GET     /orders/{id}                            SupplierOrders.details
#验证电子券页面
GET     /coupons/verify                         VerificationCoupons.index
#验证电子券有效性
POST    /coupons/query                          VerificationCoupons.queryCoupons
#更新电子券状态及产生交易
POST    /coupons/update                         VerificationCoupons.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

*               /                                                                               module:supplier_cas

# Catch all
*       /{controller}/{action}                  {controller}.{action}
