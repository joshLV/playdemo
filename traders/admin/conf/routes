# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /cusers                               Cusers.index
GET     /cusers/new                           Cusers.add
POST    /cusers                               Cusers.create
POST    /cusers/checkLoginName                Cusers.checkLoginName
GET     /cusers/{id}/edit                     Cusers.edit
POST    /cusers/{id}                          Cusers.update
DELETE  /cusers/{id}                          Cusers.delete
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
