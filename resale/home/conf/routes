# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET /  Application.index
#注册
GET     /register                               Register.index
POST    /register                               Register.create
POST    /register/checkLoginName                Register.checkLoginName

# Resaler Favorite
GET     /library                                ResalerFavs.index
POST    /library                                ResalerFavs.order
DELETE  /library/{goodsIds}                     ResalerFavs.delete

GET     /carts                                  ResalerCarts.index
POST    /carts                                  ResalerCarts.formAdd
POST    /carts/reorder                          ResalerCarts.reorder
DELET   /carts/{goodsId}-{phones}               ResalerCarts.delete

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
