# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                             MyOrders.index
GET     /orders                                       MyOrders.index
POST    /orders/refund/{id}                           MyOrders.applyRefund
GET     /orders/{id}                                  MyOrders.details
GET     /coupons                                      MyCoupons.coupons
GET     /payment/{id}                                 MyOrders.pay
POST    /coupons/refund/{id}                          MyCoupons.applyRefund

GET     /user/{id}/password                           UserInfomations.index
POST    /user/{id}                                    UserInfomations.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

*       /                                       module:website_cas
# Catch all
*       /{controller}/{action}                  {controller}.{action}
