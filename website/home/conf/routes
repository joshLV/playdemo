# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                             MyOrders.index
GET     /orders                                       MyOrders.index
POST    /orders/refund/{id}                           MyOrders.applyRefund
GET     /orders/{id}                                  MyOrders.details
GET     /coupons                                      MyCoupons.coupons
GET     /payment/{id}                                 MyOrders.pay
POST    /coupons/refund/{id}                          MyCoupons.applyRefund


#用户资料
GET      /userInfo                                    UserInfos.index
POST     /userInfo/{id}                               UserInfos.update
POST     /userInfo/bindMobile                         UserInfos.bindMobile
POST     /userInfo/send                               UserInfos.sendValidCode

GET     /user/password                                UserPassword.index
POST    /user/{id}                                    UserPassword.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

*       /                                       module:website_cas
# Catch all
*       /{controller}/{action}                  {controller}.{action}
