# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                             UserOrders.index
GET     /orders                                       UserOrders.index
POST    /orders/refund/{id}                           UserOrders.applyRefund
GET     /orders/{id}                                  UserOrders.details
GET     /coupons                                      UserCoupons.coupons
GET     /payment/{id}                                 UserOrders.pay
POST    /coupons/refund/{id}                          UserCoupons.applyRefund


#用户资料
GET      /userInfo                                    UserInfos.index
POST     /userInfo/{id}                               UserInfos.update
POST     /userInfo/bindMobile                         UserInfos.bindMobile
POST     /userInfo/send                               UserInfos.sendValidCode

#收货地址
GET     /address                                      UserAddress.index

GET     /user/password                                UserPassword.index
POST    /user/{id}                                    UserPassword.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

*       /                                       module:website_cas
# Catch all
*       /{controller}/{action}                  {controller}.{action}
