# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                             UserOrders.index
GET     /orders                                       UserOrders.index
POST    /orders/refund/{id}                           UserOrders.applyRefund
GET     /orders/{id}                                  UserOrders.details
GET     /coupons                                      UserCoupons.index
GET     /payment/{id}                                 UserOrders.pay
POST    /coupons/refund/{id}                          UserCoupons.applyRefund

#购物车
GET     /carts/tops                                   UserCarts.tops
DELETE  /carts/{goodsIds}                             UserCarts.delete

#用户资料
GET      /userInfo                                    UserInfos.index
POST     /userInfo/{id}                               UserInfos.update
POST     /userInfo/bindMobile                         UserInfos.bindMobile
POST     /userInfo/send                               UserInfos.sendValidCode

#收货地址
GET     /addresses                                    UserAddresses.index
GET     /addresses/new                                UserAddresses.add
POST    /addresses                                    UserAddresses.create
GET     /addresses/{id}/edit                          UserAddresses.edit
PUT     /addresses/{id}                               UserAddresses.update
PUT     /addresses/{id}/default                       UserAddresses.updateDefault
DELETE  /addresses/{id}                               UserAddresses.delete

GET     /user/password                                UserPasswords.index
POST    /user/{id}                                    UserPasswords.update

GET     /userPoint                                   UserPoints.index

# 提现申请
GET     /withdraw                                   Withdraw.index
GET     /withdraw/detail/{id}                       Withdraw.detail
GET     /withdraw/apply                             Withdraw.apply
POST    /withdraw/apply                             Withdraw.create

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

*       /                                       module:website_cas
# Catch all
*       /{controller}/{action}                  {controller}.{action}
