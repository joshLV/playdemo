# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       SupplierOrders.index
GET     /orders                                 SupplierOrders.index
GET     /orders/{orderNumber}                   SupplierOrders.details
# 券列表
GET     /coupons                                SupplierCoupons.index


#验证电子券页面
#GET     /coupons/verify                         SupplierCoupons.verify
GET     /coupons/single-verify                  SupplierVerifyCoupons.single
GET     /coupons/multi-verify                  SupplierVerifyCoupons.multi
#验证电子券有效性
#GET    /coupons/query                           SupplierCoupons.query
GET    /coupons/query                           SupplierVerifyCoupons.query
#更新电子券状态及产生交易
POST    /coupons/update                         SupplierCoupons.update
POST    /coupons/single-verify                  SupplierVerifyCoupons.singleVerify
POST    /coupons/multi-verify                    SupplierVerifyCoupons.multiVerify
GET     /coupon-excel-out                       SupplierCoupons.couponExcelOut


# 补偿未同步的状态
GET    /ecoupon-compensation/consumed           ECouponCompensations.consumed

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

*               /                                module:supplier_rbac

# Catch all
*       /{controller}/{action}                  {controller}.{action}
