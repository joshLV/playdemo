# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                      KtvRoomTypes.index

# [v2]ktvRoom
GET     /ktv/room-type                              KtvRoomTypes.index
GET     /ktv/room-type/new                          KtvRoomTypes.add
POST    /ktv/room-type                              KtvRoomTypes.create
GET     /ktv/room-type/{id}/edit                    KtvRoomTypes.edit
DELETE  /ktv/room-type/{id}                         KtvRoomTypes.delete
PUT     /ktv/room-type/{id}                         KtvRoomTypes.update

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
