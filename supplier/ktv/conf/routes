# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           KtvRoomTypes.index

# [v2]ktvRoom
GET     /ktv/room-type                              KtvRoomTypes.index
GET     /ktv/room-type/new                          KtvRoomTypes.add
POST    /ktv/room-type                              KtvRoomTypes.create
GET     /ktv/room-type/{id}/edit                    KtvRoomTypes.edit
DELETE  /ktv/room-type/{id}                         KtvRoomTypes.delete
PUT     /ktv/room-type/{id}                         KtvRoomTypes.update

#ktv 价格设置
GET     /ktv/price-schedule                              KtvPriceSchedules.index
GET     /ktv/price-schedule/new                          KtvPriceSchedules.add
POST    /ktv/price-schedule                              KtvPriceSchedules.create
POST    /ktv/price-schedule/json-search                  KtvPriceSchedules.jsonSearch
GET     /ktv/price-schedule/{id}/edit                    KtvPriceSchedules.edit
DELETE  /ktv/price-schedule/{id}                         KtvPriceSchedules.delete
PUT     /ktv/price-schedule/{id}                         KtvPriceSchedules.update


#ktv 促销活动
GET     /ktv/sales-promotion                             KtvSalesPromotions.index
GET     /ktv/sales-promotion/new                         KtvSalesPromotions.add


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
