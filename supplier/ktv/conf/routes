# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           KtvPriceSchedules.index

# [v2]
GET     /ktv/product-bind                              KtvProductTaobaoBind.index
POST    /ktv/product-query-taobao                      KtvProductTaobaoBind.queryTaobaoProduct
POST    /ktv/product-bind                              KtvProductTaobaoBind.bindProduct

#ktv 价格设置
GET     /ktv/price-schedule                              KtvPriceSchedules.index
GET     /ktv/price-schedule/new                          KtvPriceSchedules.showAdd
POST    /ktv/price-schedule/collision-detect            KtvPriceSchedules.jsonCollisionDetection

POST    /ktv/price-schedule                              KtvPriceSchedules.create
POST    /ktv/price-schedule/json-search                  KtvPriceSchedules.jsonSearch
GET     /ktv/price-schedule/{id}/edit                    KtvPriceSchedules.showEdit
DELETE  /ktv/price-schedule/{id}                         KtvPriceSchedules.delete
PUT     /ktv/price-schedule/{id}                         KtvPriceSchedules.update

#ktv 每日价格
GET     /ktv/daily-schedule                         KtvDailySchedule.index
POST    /ktv/roominfo/json-search                  KtvDailySchedule.jsonRoom


#ktv 促销活动
GET     /ktv/promotion                             KtvPromotions.index
GET     /ktv/promotion/new                         KtvPromotions.add


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
