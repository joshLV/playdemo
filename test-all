#!/bin/bash
PWD=`pwd`
function run_auto_test() {
    if [[ -d $PWD/$1 ]]; then
        echo "Runing Play on $PWD/$1 ..."
        cd $PWD/$1
        play clean
        play auto-test --deps
    else
        echo "$1 Not Exists!"
    fi
}

run_auto_test website/www
run_auto_test website/home
run_auto_test traders/sales
run_auto_test traders/order
run_auto_test cdn/image-server